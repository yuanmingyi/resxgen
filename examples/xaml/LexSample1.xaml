<UserControl x:Class="Resxgen.Examples.Xaml.LexSample1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lex1="http://wpflocalizeextension.codeplex.com"
             xmlns:asm="clr-namespace:Resxgen"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="{lex1:Loc Key=LexTextBlockText}" />
        <Button Content="{lex1:Loc Strings:LexButtonContent}" />
        <Label Content="{lex1:Loc asm:Strings1:LexLabelContent}" />
    </Grid>
</UserControl>
